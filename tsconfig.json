{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@podcast-platform/website/home-screen": [
        "libs/website/home-screen/src/index.ts"
      ],
      "@podcast-platform/website/episode-details": [
        "libs/website/episode-details/src/index.ts"
      ],
      "@podcast-platform/admin/dashboard": [
        "libs/admin/dashboard/src/index.ts"
      ],
      "@podcast-platform/admin/episodes": [
        "libs/admin/episodes/src/index.ts"
      ],
      "@podcast-platform/admin/guests": [
        "libs/admin/guests/src/index.ts"
      ],
      "@podcast-platform/common-ui": [
        "libs/common-ui/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
